{% extends 'base.html.twig' %}

{% block title %}Easy Solutions ‚Äì VoIP, Cloud Telefonie & ICT Oplossingen{% endblock %}

{% block meta_description %}
    Easy Solutions levert professionele VoIP-oplossingen, cloud telefonie, SIP-trunks, PBX, hosting, ICT en support.
{% endblock %}

{% block body %}

    <!-- HERO -->
    <main class="hero text-white text-center d-flex align-items-center">
        <div class="hero-bg" style="background-image:url('{{ asset('assets/hero-background.webp') }}');"></div>
        <div class="hero-overlay"></div>

        <div class="container position-relative">
            <h1 class="display-3 fw-bold">Innovatieve & Betrouwbare Telecomoplossingen</h1>
            <p class="lead mb-4">VoIP, Cloud Telefonie en ICT-oplossingen voor bedrijven</p>

            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a href="{{ path('app_diensten') }}" class="btn btn-outline-light btn-lg">Bekijk Diensten</a>
                <a href="{{ path('app_contact') }}" class="btn btn-light btn-lg text-dark">Contact</a>
            </div>
        </div>

        <a href="#section1" class="scroll-down">‚Üì</a>
    </main>

    <!-- VOIP -->
    <section id="section1" class="py-5 bg-light">
        <div class="container">
            <h2 class="fw-bold text-center mb-5">VoIP & Cloud Telefonie</h2>

            <div class="row g-4 text-center">
                {% for item in ['‚òéÔ∏è VoIP Trunks','‚òÅÔ∏è Cloud PBX','üí° Consultancy'] %}
                    {% set parts = item|split(' ', 2) %}
                    <div class="col-md-4">
                        <div class="card info-card p-4 h-100">
                            <div class="icon-circle">{{ parts[0] }}</div>
                            <h3 class="h5 mt-3">{{ parts[1] }}</h3>
                            <p>Professionele en schaalbare oplossingen.</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- TRUSTED BY ‚Äì NAADLOOS -->
    <section class="trusted-section py-5">
        <div class="container">
            <h2 class="fw-bold text-center mb-3">Vertrouwd door bedrijven</h2>
            <p class="text-center text-muted mb-5">
                Dagelijks actief voor organisaties in heel Nederland
            </p>
        </div>

        <div class="logo-marquee">
            <div class="logo-track">
                {% for i in 1..10 %}
                    <div class="logo-item">
                        <img src="{{ asset('assets/clients/client' ~ i ~ '.webp') }}" alt="Client {{ i }}">
                    </div>
                {% endfor %}
                {% for i in 1..10 %}
                    <div class="logo-item">
                        <img src="{{ asset('assets/clients/client' ~ i ~ '.webp') }}" alt="Client {{ i }}">
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="cta-banner text-center text-white py-5">
        <div class="container">
            <h2 class="fw-bold mb-3">Direct contact met onze experts?</h2>
            <p class="mb-4">Wij helpen je vandaag nog verder.</p>
            <a href="{{ path('app_contact') }}" class="btn btn-cta btn-lg">Neem Contact Op</a>
        </div>
    </section>

    <!-- SUPPORT -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="fw-bold text-center mb-5">Ondersteuning & Support</h2>

            <div class="row g-4 text-center">
                {% set support = [
                    {'icon':'üì°','title':'Nummerportering','text':'Soepele en snelle nummerporteringen.'},
                    {'icon':'üõ†Ô∏è','title':'Support','text':'Snelle support via telefoon, e-mail of ticket.'},
                    {'icon':'üîó','title':'Netwerk','text':'Communicatie via het betrouwbare KPN-netwerk.'},
                    {'icon':'üë®‚Äçüíº','title':'Specialisten','text':'Ervaren telecomspecialisten sinds 2008.'}
                ] %}
                {% for s in support %}
                    <div class="col-md-3 col-sm-6">
                        <div class="card info-card p-4 h-100">
                            <div class="icon-circle">{{ s.icon }}</div>
                            <h3 class="h6 mt-3">{{ s.title }}</h3>
                            <p>{{ s.text }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- STYLES -->
    <style>
        /* HERO */
        .hero{height:100vh;position:relative;overflow:hidden}
        .hero-bg{position:absolute;inset:0;background-size:cover;background-position:center}
        .hero-overlay{position:absolute;inset:0;background:linear-gradient(135deg,rgba(0,31,77,.65),rgba(200,0,0,.35))}
        .scroll-down{position:absolute;bottom:20px;left:50%;transform:translateX(-50%);color:#fff;font-size:2rem}

        /* ICON */
        .icon-circle{
            width:60px;height:60px;border-radius:50%;
            display:flex;align-items:center;justify-content:center;
            background:#00316d;color:#fff;font-size:1.8rem;margin:auto;
            transition:.4s cubic-bezier(.22,1,.36,1);
        }

        /* INFO CARD PHYSICS */
        .info-card{
            border:0;
            transition:transform .45s cubic-bezier(.22,1,.36,1), box-shadow .45s;
        }
        .info-card:hover{
            transform:translateY(-14px) scale(1.04);
            box-shadow:0 30px 55px rgba(0,0,0,.2);
        }
        .info-card:hover .icon-circle{
            transform:scale(1.25) rotate(6deg);
            background:linear-gradient(135deg,#00316d,#c62828);
        }

        /* TRUSTED BY ‚Äì PERFECT LOOP */
        .trusted-section{background:#fff;overflow:hidden}
        .logo-marquee{position:relative;overflow:hidden;width:100%;}
        .logo-marquee::before,
        .logo-marquee::after{
            content:'';position:absolute;top:0;width:120px;height:100%;z-index:2;pointer-events:none;
        }
        .logo-marquee::before{left:0;background:linear-gradient(to right,#fff,transparent);}
        .logo-marquee::after{right:0;background:linear-gradient(to left,#fff,transparent);}
        .logo-track{display:flex;width:max-content;animation:scroll-logos 26s linear infinite;}
        .logo-marquee:hover .logo-track{animation-play-state:paused;}
        .logo-item{flex:0 0 220px;height:100px;display:flex;align-items:center;justify-content:center;}
        .logo-item img{max-width:160px;max-height:60px;object-fit:contain;filter:grayscale(100%) opacity(.55);transition:.4s cubic-bezier(.22,1,.36,1);}
        .logo-item:hover img{filter:none;transform:scale(1.15);}
        @keyframes scroll-logos{from{transform:translateX(0)}to{transform:translateX(-50%)}}

        /* BUTTONS */
        .btn{border-radius:10px;font-weight:600;transition:.35s}
        .btn:hover{transform:translateY(-3px)}
        .btn-cta{
            background:linear-gradient(135deg,#b71c1c,#e53935);
            color:#fff;border:none;
            box-shadow:0 10px 25px rgba(183,28,28,.45);
        }
        .btn-cta:hover{
            background:linear-gradient(135deg,#e53935,#b71c1c);
            transform:translateY(-4px) scale(1.05);
            box-shadow:0 18px 40px rgba(183,28,28,.6);
        }
        .cta-banner{background:#00316d}
    </style>

{% endblock %}
