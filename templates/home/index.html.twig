{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <!-- Full-screen flashy hero -->
    <section class="hero-fullscreen position-relative overflow-hidden text-white" style="
    width: 100%;
    height: 100vh;
    background: linear-gradient(135deg, #4f46e5 0%, #6366f1 40%, #8b5cf6 100%);
    color: white;
">

        <!-- Glow / abstract blobs -->
        <div class="position-absolute top-0 start-0 w-100 h-100">
            <div style="position:absolute; top:-100px; left:-150px; width:600px; height:600px; background: rgba(255,255,255,0.2); border-radius: 50% 40% 60% 50%; filter: blur(150px);"></div>
            <div style="position:absolute; bottom:-120px; right:-150px; width:700px; height:700px; background: rgba(255,255,255,0.15); border-radius: 40% 60% 50% 60%; filter: blur(180px);"></div>
        </div>

        <!-- Content -->
        <div class="position-relative h-100 d-flex align-items-center">
            <div class="container text-center text-lg-start">
                <div class="row align-items-center">
                    <!-- Tekst -->
                    <div class="col-lg-6 mb-5 mb-lg-0">
                        <h1 class="display-3 fw-bold mb-4" style="line-height: 1.2; text-shadow: 0 6px 14px rgba(0,0,0,0.3);">
                            Digitale oplossingen,<br>
                            <span style="color:#FFD700;">op het hoogste niveau.</span>
                        </h1>
                        <p class="fs-5 mb-4 opacity-75">
                            Wij bouwen schaalbare webapplicaties, websites en cloudsoftware â€”
                            met Symfony, PHP en moderne frontend technologie.
                            Snel, veilig en zonder gedoe.
                        </p>

                        <a href="#" class="btn btn-light btn-lg px-4 py-3 me-3 shadow-sm">
                            Bekijk onze diensten
                        </a>
                        <a href="#" class="btn btn-outline-light btn-lg px-4 py-3">
                            Contact
                        </a>
                    </div>

                    <!-- Illustratie -->
                    <div class="col-lg-6 text-center">
                        <img src="{{ asset('assets/hero-illustration.png') }}"
                             alt="Software Solutions"
                             class="img-fluid"
                             style="max-height: 400px; filter: drop-shadow(0 12px 35px rgba(0,0,0,0.4)); animation: float 4s ease-in-out infinite;">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <style>
        @keyframes float {
            0%   { transform: translateY(0px); }
            50%  { transform: translateY(-15px); }
            100% { transform: translateY(0px); }
        }
        .hero-fullscreen {
            position: relative;
        }
    </style>
{% endblock %}



