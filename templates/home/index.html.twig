{% extends 'base.html.twig' %}

{% block title %}Easy Solutions ‚Äì VoIP, Cloud Telefonie & ICT Oplossingen{% endblock %}

{% block meta_description %}
    Easy Solutions levert professionele VoIP-oplossingen, cloud telefonie, SIP-trunks, PBX, hosting, ICT en support.
{% endblock %}

{% block body %}

    <!-- HERO -->
    <main class="hero text-white text-center d-flex align-items-center">
        <div class="hero-bg" style="background-image:url('{{ asset('assets/hero-background.webp') }}');"></div>
        <div class="hero-overlay"></div>

        <div class="container position-relative">
            <h1 class="display-3 fw-bold">Innovatieve & Betrouwbare Telecomoplossingen</h1>
            <p class="lead mb-4">VoIP, Cloud Telefonie en ICT-oplossingen voor bedrijven</p>

            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a href="{{ path('app_diensten') }}" class="btn btn-outline-light btn-lg">Bekijk Diensten</a>
                <a href="{{ path('app_contact') }}" class="btn btn-light btn-lg text-dark">Contact</a>
            </div>
        </div>

        <a href="#section1" class="scroll-down">‚Üì</a>
    </main>

    <!-- VOIP -->
    <section id="section1" class="py-5 bg-light">
        <div class="container">
            <h2 class="fw-bold text-center mb-5">VoIP & Cloud Telefonie</h2>

            <div class="row g-4 text-center">
                {% for item in ['‚òéÔ∏è VoIP Trunks','‚òÅÔ∏è Cloud PBX','üí° Consultancy'] %}
                    {% set parts = item|split(' ', 2) %}
                    <div class="col-md-4">
                        <div class="card info-card p-4 h-100">
                            <div class="icon-circle">{{ parts[0] }}</div>
                            <h3 class="h5 mt-3">{{ parts[1] }}</h3>
                            <p>Professionele en schaalbare oplossingen.</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- TRUSTED BY ‚Äì NAADLOOS -->
    <section class="trusted-section py-5">
        <div class="container">
            <h2 class="fw-bold text-center mb-3">Vertrouwd door bedrijven</h2>
            <p class="text-center text-muted mb-5">
                Dagelijks actief voor organisaties in heel Nederland
            </p>
        </div>

        <div class="logo-marquee">
            <div class="logo-track">
                {% for i in 1..10 %}
                    <div class="logo-item">
                        <img src="{{ asset('assets/clients/client' ~ i ~ '.webp') }}" alt="Client {{ i }}">
                    </div>
                {% endfor %}
                {% for i in 1..10 %}
                    <div class="logo-item">
                        <img src="{{ asset('assets/clients/client' ~ i ~ '.webp') }}" alt="Client {{ i }}">
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="cta-banner text-center text-white py-5">
        <div class="container">
            <h2 class="fw-bold mb-3">Direct contact met onze experts?</h2>
            <p class="mb-4">Wij helpen je vandaag nog verder.</p>
            <a href="{{ path('app_contact') }}" class="btn btn-cta btn-lg">Neem Contact Op</a>
        </div>
    </section>

    <!-- SUPPORT ‚Äì NEXT-LEVEL CARDS -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="fw-bold text-center mb-5">Ondersteuning & Support</h2>

            <div class="row g-4">
                {% set support = [
                    {'icon':'üì°','title':'Nummerportering','text':'Soepele en snelle nummerporteringen.'},
                    {'icon':'üõ†Ô∏è','title':'Support','text':'Snelle support via telefoon, e-mail of ticket.'},
                    {'icon':'üîó','title':'Netwerk','text':'Communicatie via het betrouwbare KPN-netwerk.'},
                    {'icon':'üë®‚Äçüíº','title':'Specialisten','text':'Ervaren telecomspecialisten sinds 2008.'}
                ] %}
                {% for s in support %}
                    <div class="col-md-3 col-sm-6 d-flex">
                        <div class="info-card-upgraded p-4 text-center">
                            <div class="icon-circle-upgraded">{{ s.icon }}</div>
                            <h5 class="mt-3 fw-bold">{{ s.title }}</h5>
                            <p>{{ s.text }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- STIJLEN -->
    <style>
        /* HERO */
        .hero{height:100vh;position:relative;overflow:hidden;display:flex;align-items:center;justify-content:center;text-align:center}
        .hero-bg{position:absolute;inset:0;background-size:cover;background-position:center;filter:brightness(0.65)}
        .hero-overlay{position:absolute;inset:0;background:linear-gradient(135deg,rgba(0,31,77,.65),rgba(200,0,0,.35))}
        .scroll-down{position:absolute;bottom:20px;left:50%;transform:translateX(-50%);color:#fff;font-size:2rem;animation:bounce 2s infinite}
        @keyframes bounce{0%,20%,50%,80%,100%{transform:translateY(0)}40%{transform:translateY(-10px)}60%{transform:translateY(-5px)}}

        /* ICONS */
        .icon-circle{width:60px;height:60px;border-radius:50%;display:flex;align-items:center;justify-content:center;background:#00316d;color:#fff;font-size:1.8rem;margin:auto;transition:.4s cubic-bezier(.22,1,.36,1)}
        .info-card{border:0;transition:transform .45s cubic-bezier(.22,1,.36,1), box-shadow .45s}
        .info-card:hover{transform:translateY(-14px) scale(1.04);box-shadow:0 30px 55px rgba(0,0,0,.2)}
        .info-card:hover .icon-circle{transform:scale(1.25) rotate(6deg);background:linear-gradient(135deg,#00316d,#c62828)}

        /* TRUSTED BY */
        .trusted-section{background:#fff;overflow:hidden}
        .logo-marquee{position:relative;overflow:hidden;width:100%}
        .logo-marquee::before,.logo-marquee::after{content:'';position:absolute;top:0;width:120px;height:100%;z-index:2;pointer-events:none}
        .logo-marquee::before{left:0;background:linear-gradient(to right,#fff,transparent)}
        .logo-marquee::after{right:0;background:linear-gradient(to left,#fff,transparent)}
        .logo-track{display:flex;width:max-content;animation:scroll-logos 26s linear infinite}
        .logo-marquee:hover .logo-track{animation-play-state:paused}
        .logo-item{flex:0 0 220px;height:100px;display:flex;align-items:center;justify-content:center}
        .logo-item img{max-width:160px;max-height:60px;object-fit:contain;filter:grayscale(100%) opacity(.55);transition:.4s cubic-bezier(.22,1,.36,1)}
        .logo-item:hover img{filter:none;transform:scale(1.15)}
        @keyframes scroll-logos{from{transform:translateX(0)}to{transform:translateX(-50%)}}

        /* CTA BUTTONS */
        .btn{border-radius:10px;font-weight:600;transition:.35s}
        .btn:hover{transform:translateY(-3px)}
        .btn-cta{background:linear-gradient(135deg,#b71c1c,#e53935);color:#fff;border:none;box-shadow:0 10px 25px rgba(183,28,28,.45)}
        .btn-cta:hover{background:linear-gradient(135deg,#e53935,#b71c1c);transform:translateY(-4px) scale(1.05);box-shadow:0 18px 40px rgba(183,28,28,.6)}
        .cta-banner{background:#00316d}

        /* NEXT-LEVEL SUPPORT CARDS */
        .info-card-upgraded{
            flex:1 1 100%;
            border-radius:18px;
            background:linear-gradient(145deg,#001f4d,#b30000);
            color:#fff;
            box-shadow:0 12px 25px rgba(0,0,0,0.15);
            transition:transform 0.35s ease, box-shadow 0.35s ease, opacity 0.5s;
            opacity:0;
            transform:translateY(20px);
            display:flex;
            flex-direction:column;
            justify-content:space-between;
            min-height:320px;
            padding:2rem 1.5rem;
        }
        .info-card-upgraded.visible{opacity:1;transform:translateY(0)}
        .info-card-upgraded:hover{transform:translateY(-10px) scale(1.05);box-shadow:0 25px 50px rgba(0,0,0,0.25)}
        .icon-circle-upgraded{
            width:70px;
            height:70px;
            border-radius:50%;
            margin:auto;
            display:flex;
            align-items:center;
            justify-content:center;
            font-size:2rem;
            background:linear-gradient(135deg,#ff5f5f,#ff1c1c);
            box-shadow:0 0 12px rgba(255,28,28,0.7);
            transition:transform 0.35s ease, box-shadow 0.35s ease;
        }
        .info-card-upgraded:hover .icon-circle-upgraded{transform:scale(1.4) rotate(5deg);box-shadow:0 0 25px rgba(255,28,28,0.9)}

        /* RESPONSIVE */
        @media (max-width:768px){
            .hero h1{font-size:2.5rem}
            .hero p{font-size:1.1rem}
            .info-card-upgraded{padding:1.5rem 1rem;min-height:auto}
        }
    </style>

    <!-- JS: Parallax & Fade-in Support Cards -->
    <script>
        document.addEventListener('scroll', function(){
            const scrolled = window.scrollY;
            const hero = document.querySelector('.hero-bg');
            if(hero) hero.style.transform = 'translateY(' + scrolled*0.3 + 'px) scale(1.05)';

            const cards = document.querySelectorAll('.info-card-upgraded');
            cards.forEach(card=>{
                const rect = card.getBoundingClientRect();
                if(rect.top < window.innerHeight - 50){
                    card.classList.add('visible');
                }
            });
        });
    </script>

{% endblock %}
