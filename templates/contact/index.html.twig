{% extends 'base.html.twig' %}

{% block title %}Contact - Easy Solutions{% endblock %}

{% block body %}

    <header class="py-5 position-relative text-white" style="background: linear-gradient(135deg, #001f4d, #b30000);">
        <div class="container py-5">
            <div class="row justify-content-center text-center g-4">
                <div class="col-lg-8">
                    <span class="badge bg-light text-dark mb-2">We helpen graag</span>
                    <h1 class="display-5 fw-bold mb-2">Neem contact op</h1>
                    <p class="lead opacity-75 mb-0">Vragen of klaar om te starten? We helpen graag.</p>
                </div>
            </div>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120" class="position-absolute start-0 w-100" style="bottom:-1px" preserveAspectRatio="none" height="60">
            <path fill="#ffffff" d="M0,64L48,74.7C96,85,192,107,288,112C384,117,480,107,576,96C672,85,768,75,864,80C960,85,1056,107,1152,112C1248,117,1344,107,1392,101.3L1440,96L1440,120L1392,120C1344,120,1248,120,1152,120C1056,120,960,120,864,120C768,120,672,120,576,120C480,120,384,120,288,120C192,120,96,120,48,120L0,120Z"/>
        </svg>
    </header>

    <main class="py-5">
        <div class="container">
            <div class="row g-5 justify-content-center">

                <div class="col-lg-7">
                    <!-- Card rondom form met schaduw en afgeronde hoeken -->
                    <div class="card shadow-sm rounded-4 p-4 p-lg-5">
                        <h2 class="h4 mb-3 fw-bold text-center">Stuur ons een bericht</h2>
                        <p class="text-dark small mb-4 text-center">We reageren doorgaans binnen Ã©Ã©n werkdag.</p>

                        {% if success is defined and success == '1' %}
                            <div class="alert alert-success" id="contactSuccess" role="alert">
                                Bedankt! We nemen spoedig contact met je op.
                            </div>
                        {% endif %}

                        {% if errors is defined and errors %}
                            <div class="alert alert-danger" role="alert">
                                <ul class="mb-0">
                                    {% for error in errors %}
                                        <li>{{ error }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

                        <form action="{{ path('contact_send') }}" method="POST">
                            <input type="text" name="_honey" style="display:none">

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="contactName" name="Naam" placeholder="Naam" required value="{{ formData.Naam|default('') }}">
                                        <label for="contactName">Naam</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="contactCompany" name="Bedrijf" placeholder="Bedrijf" value="{{ formData.Bedrijf|default('') }}">
                                        <label for="contactCompany">Bedrijf (optioneel)</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="email" class="form-control" id="contactEmail" name="email" placeholder="E-mail" required value="{{ formData.email|default('') }}">
                                        <label for="contactEmail">E-mailadres</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="tel" class="form-control" id="contactPhone" name="Telefoonnummer" placeholder="0612345678" value="{{ formData.Telefoonnummer|default('') }}">
                                        <label for="contactPhone">Telefoonnummer</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-floating">
                                        <textarea class="form-control" id="contactMessage" name="Bericht" placeholder="Bericht" style="height:140px" required>{{ formData.Bericht|default('') }}</textarea>
                                        <label for="contactMessage">Bericht</label>
                                    </div>
                                </div>

                                <div class="col-12 text-center mt-3">
                                    <button type="submit" class="btn btn-lg border-dark px-5 py-3 shadow-sm rounded-pill">
                                        Verstuur bericht ðŸ’¬
                                    </button>
                                    <p class="form-text mt-3 text-dark small">
                                        Door te verzenden ga je akkoord met onze
                                        <a href="{{ path('app_privacy_beleid') }}" class="text-decoration-none">privacy voorwaarden</a>.
                                    </p>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>

        <script>
            (function () {
                const url = new URL(window.location.href);
                if (url.searchParams.get('success') === '1') {
                    document.getElementById('contactSuccess')?.classList.remove('d-none');
                }
            })();
        </script>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>

{% endblock %}
