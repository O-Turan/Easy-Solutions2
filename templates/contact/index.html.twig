{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Contact | Neem contact op</title>
    <meta name="description" content="Neem contact op met Easysolutions.nl. Vraag uw offerte aan voor VoIP.">
    <meta name="keywords" content="contact VoIP, sales, zakelijke telefonie, offerte">
    <link rel="canonical" href="https://easysolutions.nl/contact.html">
    <meta name="robots" content="index, follow">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://easysolutions.nl/contact.html">
    <meta property="og:image" content="https://easysolutions.nl/assets/image.webp">
    <meta property="og:locale" content="nl_NL">
    <meta property="og:title" content="Contact easysolutions">
    <meta property="og:description" content="Betaalbare VoIP voor kleine bedrijven">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
    <link rel="dns-prefetch" href="//cdn.jsdelivr.net">

</head>
<body>


<header class="py-5 position-relative text-white" style="background: linear-gradient(135deg, rgba(0,31,77,0.6), rgba(255,0,0,0.3));">
    <div class="container py-5">
        <div class="row align-items-center g-4">
            <div class="col-lg-8">
                <span class="badge bg-light text-dark mb-2">We helpen graag</span>
                <h1 class="display-5 fw-bold mb-2">Neem contact op</h1>
                <p class="lead opacity-75 mb-0">Vragen of klaar om te starten? We helpen graag.</p>
            </div>
        </div>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120" class="position-absolute start-0 w-100" style="bottom:-1px" preserveAspectRatio="none" height="60">
        <path fill="#ffffff" d="M0,64L48,74.7C96,85,192,107,288,112C384,117,480,107,576,96C672,85,768,75,864,80C960,85,1056,107,1152,112C1248,117,1344,107,1392,101.3L1440,96L1440,120L1392,120C1344,120,1248,120,1152,120C1056,120,960,120,864,120C768,120,672,120,576,120C480,120,384,120,288,120C192,120,96,120,48,120L0,120Z"/>
    </svg>
</header>

<!-- CONTACT -->
<main class="py-5">
    <div class="container">
        <div class="row g-5">

            <!-- CONTACTFORMULIER -->
            <div class="col-lg-7">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4 p-lg-5">
                        <h2 class="h4 mb-3 fw-bold">Stuur ons een bericht</h2>
                        <p class="text-dark small mb-4">We reageren doorgaans binnen Ã©Ã©n werkdag.</p>

                        <!-- Succesmelding (toon bij ?success=1) -->
                        <div class="alert alert-success d-none" id="contactSuccess" role="alert">
                            Bedankt! We nemen spoedig contact met je op.
                        </div>

                        <!-- FORM: eigen PHP handler -->
                        <form
                                action="/contact-send.php"
                                method="POST"
                                class="p-4 shadow-sm rounded-4 bg-white"
                                id="contactForm"
                        >
                            <!-- Anti-spam honeypot -->
                            <input type="text" name="_honey" style="display:none">

                            <div class="row g-3">
                                <!-- Naam -->
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="contactName" name="Naam" placeholder="Naam" required>
                                        <label for="contactName">Naam</label>
                                    </div>
                                </div>

                                <!-- Bedrijf (optioneel) -->
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="contactCompany" name="Bedrijf" placeholder="Bedrijf (optioneel)">
                                        <label for="contactCompany">Bedrijf (optioneel)</label>
                                    </div>
                                </div>

                                <!-- E-mail -->
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="email" class="form-control" id="contactEmail" name="email" placeholder="E-mailadres" required>
                                        <label for="contactEmail">E-mailadres</label>
                                    </div>
                                </div>

                                <!-- Telefoon -->
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="tel" class="form-control" id="contactPhone" name="Telefoonnummer" placeholder="0612345678">
                                        <label for="contactPhone">Telefoonnummer</label>
                                    </div>
                                </div>

                                <!-- Bericht -->
                                <div class="col-12">
                                    <div class="form-floating">
                                        <textarea class="form-control" id="contactMessage" name="Bericht" placeholder="Bericht" style="height:140px" required></textarea>
                                        <label for="contactMessage">Bericht</label>
                                    </div>
                                </div>

                                <!-- Versturen -->
                                <div class="col-12 text-center mt-3">
                                    <button type="submit" class=" btn-lg px-5 py-3 shadow-sm rounded-pill">
                                        Verstuur bericht ðŸ’¬
                                    </button>
                                    <p class="form-text mt-3 text-dark small">
                                        Door te verzenden ga je akkoord met onze
                                        <a href="#" class=" text-decoration-none">privacy voorwaarden</a>.
                                    </p>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>

            <!-- CONTACT INFO + MAP -->
            <div class="col-lg-5">
                <div class="p-3 bg-light border rounded mb-4">
                    <div class="mb-2"><strong>Telefoon</strong>: +31 880666100</div>
                    <div class="mb-0"><strong>Openingstijden</strong>: maâ€“vr 09:00â€“17:00</div>
                    <div class="text-dark small">Gemiddelde responstijd: <strong>binnen 1 werkdag</strong></div>
                </div>

                <div class="ratio ratio-4x3 rounded overflow-hidden shadow-sm">
                    <iframe
                            title="Google Maps - Regulusweg 5, Den Haag"
                            style="border:0" loading="lazy" allowfullscreen
                            referrerpolicy="no-referrer-when-downgrade"
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2447.59375746444!2d4.33226!3d52.06034!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c5b725a4b1f891%3A0x0000000000000000!2sRegulusweg%205%2C%202516%20AC%20Den%20Haag!5e0!3m2!1snl!2snl!4v1700000000001">
                    </iframe>
                </div>
            </div>
        </div>
    </div>

    <!-- Succes-alert activeren via query param -->
    <script>
        (function () {
            const url = new URL(window.location.href);
            if (url.searchParams.get('success') === '1') {
                document.getElementById('contactSuccess')?.classList.remove('d-none');
            }
        })();
    </script>
</main>


<!-- Klein script om de success-melding te tonen na redirect -->
<script>
    (function () {
        const params = new URLSearchParams(location.search);
        if (params.get('success') === '1') {
            const box = document.getElementById('contactSuccess');
            if (box) box.classList.remove('d-none');
        }
    })();
</script>




<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>


</body>

{% endblock %}
