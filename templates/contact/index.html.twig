                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2447.59375746444!2d4.33226!3d52.06034!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c5b725a4b1f891%3A0x0000000000000000!2sRegulusweg%205%2C%202516%20AC%20Den%20Haag!5e0!3m2!1snl!2snl!4v1700000000001">
                        </iframe>
                    </div>
                </div>

            </div>
        </div>

        <script>
            (function () {
                const url = new URL(window.location.href);
                if (url.searchParams.get('success') === '1') {
                    document.getElementById('contactSuccess')?.classList.remove('d-none');
                }
            })();
        </script>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>

