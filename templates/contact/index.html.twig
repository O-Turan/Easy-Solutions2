{% extends 'base.html.twig' %}

{% block title %}Contact - Easy Solutions{% endblock %}

{% block body %}

    <header class="py-5 position-relative text-white" style="background: linear-gradient(135deg, #001f4d, #b30000);">
        <div class="container py-5 text-center">
            <span class="badge bg-light text-dark mb-3">We helpen graag</span>
            <h1 class="display-5 fw-bold mb-2">Neem contact op</h1>
            <p class="lead opacity-75 mb-0">
                Vragen of klaar om te starten? We denken graag met je mee.
            </p>
        </div>

        <svg viewBox="0 0 1440 120" class="position-absolute start-0 w-100"
             style="bottom:-1px" preserveAspectRatio="none" height="60">
            <path fill="#ffffff"
                  d="M0,64L48,74.7C96,85,192,107,288,112C384,117,480,107,576,96C672,85,768,75,864,80C960,85,1056,107,1152,112C1248,117,1344,107,1392,101.3L1440,96L1440,120L0,120Z"/>
        </svg>
    </header>

    <main class="py-5">
        <div class="container">
            <div class="row g-5 justify-content-center align-items-start">

                <!-- FORM -->
                <div class="col-lg-7">
                    <div class="card shadow-sm rounded-4 p-4 p-lg-5">

                        <div class="text-center mb-4">
                            <h2 class="h4 fw-bold mb-1">Stuur ons een bericht</h2>
                            <p class="text-muted small mb-0">
                                We reageren doorgaans binnen Ã©Ã©n werkdag.
                            </p>
                        </div>

                        {% if success is defined and success == '1' %}
                            <div class="alert alert-success">
                                Bedankt! We nemen spoedig contact met je op.
                            </div>
                        {% endif %}

                        {% if errors is defined and errors %}
                            <div class="alert alert-danger">
                                <ul class="mb-0">
                                    {% for error in errors %}
                                        <li>{{ error }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

                        <form action="{{ path('contact_send') }}" method="POST">
                            <input type="text" name="_honey" style="display:none">

                            <div class="row g-3">

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Naam</label>
                                    <input type="text" class="form-control"
                                           name="Naam" placeholder="Uw naam"
                                           required value="{{ formData.Naam|default('') }}">
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Bedrijf</label>
                                    <input type="text" class="form-control"
                                           name="Bedrijf" placeholder="Bedrijfsnaam"
                                           value="{{ formData.Bedrijf|default('') }}">
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">E-mailadres</label>
                                    <input type="email" class="form-control"
                                           name="email" placeholder="naam@bedrijf.nl"
                                           required value="{{ formData.email|default('') }}">
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Telefoonnummer</label>
                                    <input type="tel" class="form-control"
                                           name="Telefoonnummer" placeholder="06 12345678"
                                           value="{{ formData.Telefoonnummer|default('') }}">
                                </div>

                                <div class="col-12">
                                    <label class="form-label fw-semibold">Bericht</label>
                                    <textarea class="form-control"
                                              name="Bericht" rows="4"
                                              placeholder="Waarmee kunnen we je helpen?"
                                              required>{{ formData.Bericht|default('') }}</textarea>
                                </div>

                                <div class="col-12 text-center mt-4">
                                    <!-- DE OUDE KNOP -->
                                    <button type="submit"
                                            class="btn btn-super px-5 py-3 rounded-pill shadow-lg position-relative overflow-hidden">
                                        <span class="btn-text">Verstuur bericht ðŸ’¬</span>
                                        <span class="btn-glow"></span>
                                    </button>

                                    <p class="small text-muted mt-3 mb-0">
                                        Door te verzenden ga je akkoord met onze
                                        <a href="{{ path('app_privacy_beleid') }}" class="text-decoration-none">
                                            privacyvoorwaarden
                                        </a>.
                                    </p>
                                </div>

                            </div>
                        </form>

                    </div>
                </div>

                <!-- INFO CARD -->
                <div class="col-lg-4">
                    <div class="card shadow-sm rounded-4 p-4 h-100">

                        <h3 class="h6 fw-bold mb-3">Waarom contact opnemen?</h3>

                        <ul class="list-unstyled small mb-4">
                            <li class="mb-2">âœ” Persoonlijk advies</li>
                            <li class="mb-2">âœ” Reactie binnen 1 werkdag</li>
                            <li class="mb-2">âœ” Vrijblijvend & transparant</li>
                        </ul>

                        <div class="bg-light rounded-3 p-3 text-center small">
                            ðŸ“ž Snel geholpen door een specialist
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </main>

    <!-- KNOP CSS: behoud glow effect, tekst altijd wit -->
    <style>
        .btn-super {
            background: linear-gradient(135deg, #001f4d, #b30000);
            color: #fff !important; /* Altijd wit */
            font-weight: 700;
            font-size: 1.05rem;
            letter-spacing: 0.5px;
            overflow: hidden;
            position: relative;
            transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
        }
        .btn-super .btn-text {
            position: relative;
            z-index: 2;
            color: #fff !important; /* Tekst blijft wit, ook bij hover */
        }
        .btn-super .btn-glow {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle at center, rgba(255,255,255,0.25) 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.3s, transform 0.5s;
            z-index: 1;
        }
        .btn-super:hover, .btn-super:focus, .btn-super:active {
            transform: translateY(-4px) scale(1.02);
            box-shadow: 0 12px 35px rgba(0,0,0,0.3);
            color: #fff !important; /* Tekst blijft wit */
        }
        .btn-super:hover .btn-glow{
            opacity:1;
            transform: rotate(45deg);
        }
        .btn-super:active {
            transform: translateY(0) scale(0.98);
            box-shadow: 0 6px 18px rgba(0,0,0,0.25);
        }
    </style>

{% endblock %}
