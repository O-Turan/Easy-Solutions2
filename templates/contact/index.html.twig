{% extends 'base.html.twig' %}

{% block title %}Contact - Easy Solutions{% endblock %}

{% block body %}

    <!-- HERO SECTION -->
    <header class="hero-contact position-relative text-white">
        <div class="container py-5 text-center">
            <h1 class="display-4 fw-bold mb-3">Neem contact op</h1>
            <p class="lead opacity-75">
                Vragen of klaar om te starten? We denken graag met je mee.
            </p>
        </div>
        <svg viewBox="0 0 1440 120" class="hero-wave" preserveAspectRatio="none">
            <path fill="#fff"
                  d="M0,64L48,74.7C96,85,192,107,288,112C384,117,480,107,576,96C672,85,768,75,864,80C960,85,1056,107,1152,112C1248,117,1344,107,1392,101.3L1440,96L1440,120L0,120Z"/>
        </svg>
    </header>

    <main class="py-5">
        <div class="container">
            <div class="row g-5 justify-content-center align-items-start">

                <!-- FORM -->
                <div class="col-lg-7">
                    <div class="glass-card p-4 p-lg-5">

                        <div class="text-center mb-4">
                            <h2 class="h4 fw-bold">Stuur ons een bericht</h2>
                            <p class="text-muted small">
                                We reageren doorgaans binnen Ã©Ã©n werkdag.
                            </p>
                        </div>

                        {% if success is defined and success == '1' %}
                            <div class="alert alert-success">
                                Bedankt! We nemen spoedig contact met je op.
                            </div>
                        {% endif %}

                        {% if errors is defined and errors %}
                            <div class="alert alert-danger">
                                <ul class="mb-0">
                                    {% for error in errors %}
                                        <li>{{ error }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

                        <form action="{{ path('contact_send') }}" method="POST">
                            <input type="text" name="_honey" style="display:none">

                            <div class="row g-3">

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Naam*</label>
                                    <input type="text" class="form-control form-modern"
                                           name="Naam" placeholder="Uw naam"
                                           required value="{{ formData.Naam|default('') }}">
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Bedrijf</label>
                                    <input type="text" class="form-control form-modern"
                                           name="Bedrijf" placeholder="Naam van uw bedrijf"
                                           value="{{ formData.Bedrijf|default('') }}">
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">E-mailadres*</label>
                                    <input type="email" class="form-control form-modern"
                                           name="email" placeholder="naam@bedrijf.nl"
                                           required value="{{ formData.email|default('') }}">
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Telefoonnummer</label>
                                    <input type="tel" class="form-control form-modern"
                                           name="Telefoonnummer" placeholder="06 12345678"
                                           value="{{ formData.Telefoonnummer|default('') }}">
                                </div>

                                <div class="col-12">
                                    <label class="form-label fw-semibold">Bericht*</label>
                                    <textarea class="form-control form-modern"
                                              name="Bericht" rows="4"
                                              placeholder="Waarmee kunnen we je helpen?"
                                              required>{{ formData.Bericht|default('') }}</textarea>
                                </div>

                                <div class="col-12 text-center mt-4">
                                    <button type="submit"
                                            class="btn btn-super px-5 py-3 rounded-pill shadow-lg position-relative overflow-hidden">
                                        <span class="btn-text">Verstuur bericht ðŸ’¬</span>
                                        <span class="btn-glow"></span>
                                    </button>

                                    <p class="small text-muted mt-3 mb-0">
                                        Door te verzenden ga je akkoord met onze
                                        <a href="{{ path('app_privacy_beleid') }}" class="text-decoration-none">
                                            Privacybeleid
                                        </a>.
                                    </p>
                                </div>

                            </div>
                        </form>

                    </div>
                </div>

                <!-- NEXT-LEVEL INFO CARD -->
                <div class="col-lg-4">
                    <div class="badge-card shadow-lg h-100 text-center p-4 d-flex flex-column justify-content-between">
                        <div class="icon-circle-info mb-3"><svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="#d01616" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-phone-call-icon lucide-phone-call"><path d="M13 2a9 9 0 0 1 9 9"/><path d="M13 6a5 5 0 0 1 5 5"/><path d="M13.832 16.568a1 1 0 0 0 1.213-.303l.355-.465A2 2 0 0 1 17 15h3a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2A18 18 0 0 1 2 4a2 2 0 0 1 2-2h3a2 2 0 0 1 2 2v3a2 2 0 0 1-.8 1.6l-.468.351a1 1 0 0 0-.292 1.233 14 14 0 0 0 6.392 6.384"/></svg><path d="M13 2a9 9 0 0 1 9 9"/><path d="M13 6a5 5 0 0 1 5 5"/><path d="M13.832 16.568a1 1 0 0 0 1.213-.303l.355-.465A2 2 0 0 1 17 15h3a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2A18 18 0 0 1 2 4a2 2 0 0 1 2-2h3a2 2 0 0 1 2 2v3a2 2 0 0 1-.8 1.6l-.468.351a1 1 0 0 0-.292 1.233 14 14 0 0 0 6.392 6.384"/></svg></div>
                        <div>
                            <h5 class="fw-bold mb-3">Waarom contact opnemen?</h5>
                            <ul class="list-unstyled small mb-4 text-start">
                                <li class="mb-2">âœ” Persoonlijk advies</li>
                                <li class="mb-2">âœ” Reactie binnen 1 werkdag</li>
                                <li class="mb-2">âœ” Vrijblijvend & transparant</li>
                            </ul>
                        </div>
                        <div class="small text-center badge-footer">
                            Snel geholpen door een specialist
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>

    <!-- STYLES -->
    <style>
        /* HERO */
        .hero-contact{background:radial-gradient(circle at top left,#002b6f,#00152f)}
        .hero-badge{background:rgba(255,255,255,.15);padding:.4rem 1rem;border-radius:999px;font-size:.85rem}
        .hero-wave{position:absolute;bottom:-1px;width:100%;height:60px}

        /* FORM CARD */
        .glass-card{
            background:rgba(255,255,255,.95);
            border-radius:24px;
            box-shadow:0 30px 80px rgba(0,0,0,.12);
        }
        .form-label{font-size:.8rem;font-weight:600;color:#374151;margin-bottom:.25rem}
        .form-modern{border-radius:14px;padding:14px 16px;border:1px solid #e5e7eb}
        .form-modern:focus{border-color:#002b6f;box-shadow:none}



        /* BUTTON */
        .btn-super{
            background: linear-gradient(135deg,#002b6f,#00152f);
            color:#fff !important; /* altijd wit */
            font-weight:700;
            font-size:1rem;
            position:relative;
            overflow:hidden;
            transition: transform .3s ease, box-shadow .3s ease, background .3s ease;
        }
        .btn-super .btn-glow{
            content:"";
            position:absolute;
            top:-50%;
            left:-50%;
            width:200%;
            height:200%;
            background:radial-gradient(circle at center,rgba(255,255,255,.25) 0%,transparent 70%);
            opacity:0;
            transition:opacity .3s, transform .5s;
            z-index:1;
        }
        .btn-super:hover,
        .btn-super:focus,
        .btn-super:active{
            color:#fff !important;
            transform:translateY(-4px) scale(1.02);
            box-shadow:0 12px 35px rgba(0,0,0,.25);
        }
        .btn-super:hover .btn-glow{
            opacity:1;
            transform:rotate(45deg);
        }

        /* NEXT-LEVEL INFO CARD */
        .badge-card{
            border-radius:22px;
            background:#fff;
            transition: transform .35s ease, box-shadow .35s ease;
        }
        .badge-card:hover{
            transform: translateY(-8px);
            box-shadow:0 25px 50px rgba(0,0,0,.15);
        }
        .icon-circle-info{
            width:70px;
            height:70px;
            margin:auto;
            display:flex;
            align-items:center;
            justify-content:center;
            font-size:2rem;
            border-radius:50%;
            background: linear-gradient(135deg, #002b6f,#00152f);
            color:#fff;
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .badge-card:hover .icon-circle-info{
            transform: scale(1.25) translateY(-5px);
            box-shadow:0 12px 25px rgba(0,0,0,0.3);
        }
        .badge-footer{
            padding-top:10px;
            color:#555;
            font-weight:500;
        }

        /* HERO SCROLL EFFECT */
        @media (prefers-reduced-motion: no-preference) {
            .hero-bg{will-change: transform;}
        }

        @media (max-width: 768px){
            .badge-card{padding:2rem 1.5rem;}
        }
    </style>

{% endblock %}
