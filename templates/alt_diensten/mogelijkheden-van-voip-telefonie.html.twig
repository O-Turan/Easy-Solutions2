{% extends 'base.html.twig' %}

{% block title %}Mogelijkheden van VoIP Telefonie – Easy Solutions{% endblock %}

{% block body %}

    <!-- HERO -->
    <section class="hero-section d-flex align-items-center justify-content-center text-center text-white">
        <div class="hero-bg"></div>
        <div class="hero-overlay"></div>
        <div class="container position-relative hero-content">
            <h1 class="display-3 fw-bold">Mogelijkheden van VoIP Telefonie</h1>
            <p class="lead mb-4">
                Ontdek alle functies en voordelen van zakelijke VoIP-telefonie bij Easy Solutions.
            </p>
            <a href="#features" class="scroll-down">↓</a>
        </div>
    </section>

    <!-- INTRO -->
    <section class="py-5 bg-white">
        <div class="container">
            <h2 class="fw-bold mb-4 text-center">Wat zijn de mogelijkheden van VoIP?</h2>

            <p class="text-center mx-auto" style="max-width:850px;">
                Met VoIP-telefonie van <strong>Easy Solutions</strong> bel je via het internet in plaats van via traditionele lijnen.
                Dit maakt je bereikbaarheid flexibeler, schaalbaarder en rijk aan functies.
            </p>

            <p class="text-center mx-auto" style="max-width:850px;">
                Je koppelt één zakelijk nummer aan meerdere apparaten en bepaalt zelf hoe gesprekken worden afgehandeld —
                allemaal beheerd vanuit één overzichtelijke omgeving.
            </p>
        </div>
    </section>

    <!-- FEATURES -->
    <section id="features" class="py-5 bg-light">
        <div class="container">
            <h2 class="fw-bold text-center mb-5">Belangrijkste VoIP-functies</h2>

            {% set features = [
                {
                    'title':'Professionele belplannen',
                    'text':'Geavanceerde belplannen met keuzemenu’s, wachtrijen en slimme logica voor inkomende gesprekken.',
                    'icon_svg':'<svg xmlns="http://www.w3.org/2000/svg" width="44" height="44" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-phone-icon lucide-phone"><path d="M13.832 16.568a1 1 0 0 0 1.213-.303l.355-.465A2 2 0 0 1 17 15h3a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2A18 18 0 0 1 2 4a2 2 0 0 1 2-2h3a2 2 0 0 1 2 2v3a2 2 0 0 1-.8 1.6l-.468.351a1 1 0 0 0-.292 1.233 14 14 0 0 0 6.392 6.384"/></svg>'
                },
                {
                    'title':'Doorschakelen & bereikbaarheid',
                    'text':'Automatisch doorschakelen naar mobiel, collega’s of softphones zodat je nooit een oproep mist.',
                    'icon_svg':'<svg xmlns="http://www.w3.org/2000/svg" width="44" height="44" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-maximize2-icon lucide-maximize-2"><path d="M15 3h6v6"/><path d="m21 3-7 7"/><path d="m3 21 7-7"/><path d="M9 21H3v-6"/></svg>'
                },
                {
                    'title':'Voicemail & e-mail',
                    'text':'Ontvang voicemailberichten direct in je e-mail of via de app voor maximale flexibiliteit.',
                    'icon_svg':'<svg xmlns="http://www.w3.org/2000/svg" width="44" height="44" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-audio-lines-icon lucide-audio-lines"><path d="M2 10v3"/><path d="M6 6v11"/><path d="M10 3v18"/><path d="M14 8v7"/><path d="M18 5v13"/><path d="M22 10v3"/></svg>'
                },
                {
                    'title':'Altijd en overal werken',
                    'text':'Bellen via kantoor, thuis of onderweg zolang je internet hebt — locatie speelt geen rol meer.',
                    'icon_svg':'<svg xmlns="http://www.w3.org/2000/svg" width="44" height="44" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-globe-icon lucide-globe"><circle cx="12" cy="12" r="10"/><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/><path d="M2 12h20"/></svg>'
                },
                {
                    'title':'Fax-to-email',
                    'text':'Ontvang en verstuur faxen digitaal via e-mail zonder fysieke faxapparaten.',
                    'icon_svg':'<svg xmlns="http://www.w3.org/2000/svg" width="44" height="44" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-printer-icon lucide-printer"><path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"/><path d="M6 9V3a1 1 0 0 1 1-1h10a1 1 0 0 1 1 1v6"/><rect x="6" y="14" width="12" height="8" rx="1"/></svg>'
                },
                {
                    'title':'Apps & integraties',
                    'text':'Koppel VoIP met CRM-software, mobiele apps en desktop clients voor efficiënter werken.',
                    'icon_svg':'<svg xmlns="http://www.w3.org/2000/svg" width="44" height="44" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-blocks-icon lucide-blocks"><path d="M10 22V7a1 1 0 0 0-1-1H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-5a1 1 0 0 0-1-1H2"/><rect x="14" y="2" width="8" height="8" rx="1"/></svg>'
                }
            ] %}

            <div class="row g-4">
                {% for f in features %}
                    <div class="col-md-4 col-sm-6 d-flex">
                        <div class="badge-card d-flex flex-column w-100">
                            <div class="badge-icon">
                                {{ f.icon_svg|raw }}
                            </div>
                            <div class="card-body text-center p-4 d-flex flex-column">
                                <h5 class="fw-bold mb-3">{{ f.title }}</h5>
                                <p class="mb-0">{{ f.text }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="py-5 text-center cta-section">
        <div class="container">
            <h2 class="fw-bold mb-3 text-white">Alles uit VoIP halen?</h2>
            <p class="lead mb-4 text-white">
                De specialisten van <strong>Easy Solutions</strong> adviseren je graag over de juiste functies.
            </p>
            <a href="/contact" class="btn btn-cta btn-lg text-white">Contact opnemen</a>
        </div>
    </section>

    <style>
        .hero-section{height:60vh;position:relative;overflow:hidden}
        .hero-bg{position:absolute;inset:0;background:url('{{ asset("assets/pbx-hero-background.webp") }}') center/cover no-repeat;filter:brightness(.6)}
        .hero-overlay{position:absolute;inset:0;background:linear-gradient(135deg,rgba(0,31,77,.7),rgba(179,0,0,.6))}
        .hero-content{z-index:2}

        .scroll-down{font-size:2rem;color:#fff;animation:bounce 2s infinite}

        @keyframes bounce{
            0%,20%,50%,80%,100%{transform:translateY(0)}
            40%{transform:translateY(-10px)}
            60%{transform:translateY(-5px)}
        }

        .badge-card{
            background:#fff;
            border-radius:20px;
            box-shadow:0 6px 18px rgba(0,0,0,.08);
            transition:.3s;
            overflow:hidden
        }
        .badge-card:hover{
            transform:translateY(-8px);
            box-shadow:0 18px 40px rgba(0,0,0,.15)
        }
        .badge-icon{
            height:120px;
            background:linear-gradient(135deg,#001f4d,#b30000);
            display:flex;
            align-items:center;
            justify-content:center
        }
        .badge-card h5{color:#001f4d}

        .cta-section{background:#001f4d}
        .btn-cta{background:#b30000;padding:.8rem 1.8rem;font-weight:600}
        .btn-cta:hover{background:#e53935}
    </style>

{% endblock %}
