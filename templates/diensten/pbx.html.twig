    <!-- STYLES -->
    <style>
        .hero-section{
            height: 60vh;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            overflow: hidden;
        }
        .hero-bg{
            position: absolute;
            inset: 0;
            background: url('{{ asset("assets/pbx-hero-tech.webp") }}') center/cover no-repeat;
            filter: brightness(0.6);
            transform: scale(1.1);
            z-index: 1;
            transition: transform 1.5s ease;
        }
        .hero-section:hover .hero-bg{
            transform: scale(1.15);
        }
        .hero-overlay{
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(0,31,77,0.6), rgba(179,0,0,0.5));
            z-index: 2;
            animation: overlayPulse 6s infinite alternate;
        }
        @keyframes overlayPulse{
            0%{background: linear-gradient(135deg, rgba(0,31,77,0.6), rgba(179,0,0,0.5));}
            100%{background: linear-gradient(135deg, rgba(0,31,77,0.7), rgba(179,0,0,0.6));}
        }
        .hero-content{
            position: relative;
            z-index: 3;
        }

        /* Scroll-down arrow */
        .scroll-down{
            display: inline-block;
            margin-top: 1rem;
            font-size: 2rem;
            animation: bounce 2s infinite;
            color: #fff;
        }
        @keyframes bounce{
            0%,20%,50%,80%,100%{transform:translateY(0)}
            40%{transform:translateY(-10px)}
            60%{transform:translateY(-5px)}
        }

        /* INFO CARDS */
        .info-card{
            border-radius: 12px;
            transition: transform 0.45s cubic-bezier(.22,1,.36,1), box-shadow 0.45s;
            background: #fff;
        }
        .info-card:hover{
            transform: translateY(-15px) scale(1.05);
            box-shadow: 0 25px 50px rgba(0,0,0,.2);
        }
        .icon-circle{
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: auto;
            font-size: 1.8rem;
            background: linear-gradient(135deg, #001f4d, #b30000);
            color: #fff;
            transition: transform 0.35s;
        }
        .info-card:hover .icon-circle{
            transform: scale(1.3) rotate(5deg);
        }

        /* CTA */
        .cta-section{
            background: linear-gradient(135deg,#001f4d,#b30000);
        }
        .btn-cta{
            background: linear-gradient(135deg,#e53935,#b71c1c);
            color: #fff;
            border: none;
            padding: 0.75rem 1.8rem;
            font-weight: 600;
            border-radius: 10px;
            transition: all 0.35s;
        }
        .btn-cta:hover{
            background: linear-gradient(135deg,#b71c1c,#e53935);
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 15px 30px rgba(183,28,28,.6);
        }

        /* PARALLAX EFFECT */
        @media (prefers-reduced-motion: no-preference) {
            .hero-bg{will-change: transform;}
        }
    </style>

    <!-- Parallax JS -->
    <script>
        document.addEventListener('scroll', function(){
            const scrolled = window.scrollY;
            const bg = document.querySelector('.hero-bg');
            if(bg) bg.style.transform = 'translateY(' + scrolled * 0.3 + 'px) scale(1.1)';
        });
    </script>

{% endblock %}
