{% extends 'base.html.twig' %}

{% block title %}Professionele Telecom & VoIP Diensten | Easy Solutions{% endblock %}

{% block body %}

    <!-- HERO -->
    <section class="hero-section d-flex align-items-center justify-content-center text-center">
        <div class="overlay"></div>
        <div class="container position-relative">
            <h1 class="display-3 fw-bold mb-3 animate-fade">
                VoIP, Telefonie & Telecom Diensten Voor Bedrijven
            </h1>
            <p class="lead mb-4 animate-fade delay-1">
                Complete oplossingen voor hosted telefonie, SIP-trunks en PBX-systemen.
            </p>
            <div class="d-flex justify-content-center gap-3 animate-fade delay-2">
                <a href="{{ path('offerte') }}" class="btn btn-primary btn-lg btn-glow">Nieuwe klant?</a>
                <a href="{{ path('app_dienst_white_label') }}" class="btn btn-outline-light btn-lg btn-glow">Reseller worden?</a>
            </div>
        </div>
    </section>

    <!-- DIENSTEN -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="fw-bold text-center mb-5 animate-fade">Onze Telecom Diensten</h2>

            {% set diensten = [
                {'title':'Hosted Telefonie','desc':'Betrouwbare cloudtelefonie voor bedrijven.','route':'app_dienst_hosted_telefonie','img':'/assets/hosted-telefonie.webp'},
                {'title':'White-Label Telecom','desc':'Telecom aanbieden onder uw eigen merk.','route':'app_dienst_white_label','img':'/assets/white_label_telecom.webp'},
                {'title':'SIP Trunk','desc':'Stabiele SIP-trunks met hoge kwaliteit.','route':'app_dienst_sip_trunk','img':'/assets/sip_trunk.webp'},
                {'title':'Nummerportering','desc':'Uw nummers veilig en snel overgezet.','route':'app_dienst_nummerportering','img':'/assets/nummerportering.webp'},
                {'title':'PBX Systemen','desc':'Professionele telefooncentrales.','route':'app_dienst_pbx','img':'/assets/pbx_systemen.webp'},
                {'title':'Hosted PBX','desc':'Volledig cloudgebaseerde PBX.','route':'app_dienst_hosted_pbx','img':'/assets/hosted-pbx.webp'},
                {'title':'KPN Partner','desc':'Telecom via het betrouwbare KPN-netwerk.','route':'app_dienst_kpn','img':'/assets/kpn_business_partner.webp'},
                {'title':'Mobiele App','desc':'Telefonie beheren via één app.','route':'app_dienst_mobiele_app','img':'/assets/mobiel-app.webp'}
            ] %}

            <div class="row g-4">
                {% for dienst in diensten %}
                    <div class="col-lg-3 col-md-4 col-sm-6 animate-fade delay-{{ loop.index }}">
                        <div class="dienst-card h-100">
                            <a href="{{ path(dienst.route) }}" class="stretched-link"></a>

                            <div class="dienst-image" style="background-image:url('{{ dienst.img }}')">
                                <div class="image-overlay"></div>
                            </div>

                            <div class="dienst-body text-center">
                                <h3 class="h5 fw-bold mb-2">{{ dienst.title }}</h3>
                                <p class="text-muted mb-0">{{ dienst.desc }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}

{% block javascripts %}
    <style>
        /* HERO */
        .hero-section {
            height: 70vh;
            background: linear-gradient(135deg, #001f4d, #b30000);
            color: #fff;
            position: relative;
        }
        .hero-section .overlay {
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.5);
        }

        /* BUTTONS */
        .btn-primary {
            background: #b30000;
            border: none;
        }
        .btn-primary:hover { background:#990000; }
        .btn-glow {
            box-shadow: 0 0 18px rgba(179,0,0,.55);
            transition: .3s ease;
        }
        .btn-glow:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 30px rgba(179,0,0,.8);
        }

        /* DIENST CARDS – PREMIUM */
        .dienst-card {
            background: #fff;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0,0,0,.08);
            transition: transform .45s ease, box-shadow .45s ease;
            position: relative;
        }
        .dienst-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 30px 60px rgba(0,0,0,.15);
        }

        /* IMAGE */
        .dienst-image {
            aspect-ratio: 16 / 9;
            background-size: cover;
            background-position: center;
            position: relative;
            overflow: hidden;
            transition: transform .6s ease;
        }
        .dienst-card:hover .dienst-image {
            transform: scale(1.08);
        }

        /* OVERLAY */
        .image-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(
                    to bottom,
                    rgba(0,0,0,.05),
                    rgba(0,0,0,.35)
            );
        }

        /* BODY */
        .dienst-body {
            padding: 1.6rem 1.4rem;
        }
        .dienst-body h3 {
            color: #0f172a;
        }

        /* MOBILE */
        @media (max-width:768px){
            .dienst-image { aspect-ratio: 4 / 3; }
        }

        /* ANIMATIONS */
        .animate-fade {
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp .9s forwards;
        }
        .animate-fade.delay-1{animation-delay:.1s}
        .animate-fade.delay-2{animation-delay:.2s}
        .animate-fade.delay-3{animation-delay:.3s}
        .animate-fade.delay-4{animation-delay:.4s}
        .animate-fade.delay-5{animation-delay:.5s}
        .animate-fade.delay-6{animation-delay:.6s}
        .animate-fade.delay-7{animation-delay:.7s}
        .animate-fade.delay-8{animation-delay:.8s}

        @keyframes fadeInUp {
            to { opacity:1; transform:none; }
        }
    </style>
{% endblock %}
