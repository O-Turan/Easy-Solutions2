{% extends 'base.html.twig' %}

{% block title %}Professionele Telecom & VoIP Diensten | Easy Solutions{% endblock %}

{% block stylesheets %}

    {# PRELOAD HERO IMAGE #}
    <link rel="preload"
          as="image"
          href="{{ asset('assets/diensten_background.webp') }}"
          fetchpriority="high">

    {# PRELOAD FONT #}
    <link rel="preload" href="{{ asset('fonts/Inter.woff2') }}" as="font" type="font/woff2" crossorigin>

    <style>
        /* FONT */
        @font-face {
            font-family: 'Inter';
            src: url('{{ asset('fonts/Inter.woff2') }}') format('woff2');
            font-weight: 400;
            font-style: normal;
            font-display: swap;
        }
        body, h1, h2, h3, p, a {
            font-family: 'Inter', system-ui, sans-serif;
        }

        /* HERO */
        .hero-section {
            position: relative;
            height: 70vh;
            color: #fff;
        }

        .hero-section img {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: 0;
        }

        .hero-section .overlay {
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.3);
            z-index: 1;
        }

        .hero-content {
            position: relative;
            z-index: 2;
            min-height: 300px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            gap: 1rem;
        }

        /* BUTTONS */
        .btn-primary { background: #b30000; border: none; }
        .btn-primary:hover { background: #990000; }
        .btn-glow {
            box-shadow: 0 0 18px rgba(179, 0, 0, .55);
            transition: .3s ease;
        }
        .btn-glow:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 30px rgba(179, 0, 0, .8);
        }

        /* CTA */
        .cta-section { background: #001f4d; }
        .btn-cta {
            background: #b30000;
            color: #fff;
            border-radius: 6px;
            padding: 0.7rem 1.8rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .btn-cta:hover {
            background: #e53935;
            transform: translateY(-2px) scale(1.03);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

        /* DIENST CARDS */
        .dienst-card {
            background: #fff;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0,0,0,.08);
            transition: transform .45s ease, box-shadow .45s ease;
            position: relative;
            min-height: 320px;
        }
        .dienst-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 30px 60px rgba(0,0,0,.15);
        }
        .dienst-image {
            aspect-ratio: 16/9;
            background-size: cover;
            background-position: center;
            position: relative;
            overflow: hidden;
            transition: transform .6s ease;
        }
        .dienst-card:hover .dienst-image { transform: scale(1.08); }
        .image-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(to bottom, rgba(0,0,0,.05), rgba(0,0,0,.35));
        }
        .dienst-body { padding: 1.6rem 1.4rem; }
        .dienst-body h3 { color: #0f172a; }

        @media (max-width: 768px) { .dienst-image { aspect-ratio: 4/3; } }

        /* ANIMATIONS */
        .animate-fade {
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp .9s forwards;
        }
        .animate-fade.delay-1 { animation-delay: .1s }
        .animate-fade.delay-2 { animation-delay: .2s }
        .animate-fade.delay-3 { animation-delay: .3s }
        .animate-fade.delay-4 { animation-delay: .4s }
        .animate-fade.delay-5 { animation-delay: .5s }
        .animate-fade.delay-6 { animation-delay: .6s }
        .animate-fade.delay-7 { animation-delay: .7s }
        .animate-fade.delay-8 { animation-delay: .8s }

        @keyframes fadeInUp { to { opacity: 1; transform: none; } }
    </style>
{% endblock %}

{% block body %}
    <section class="hero-section">
        <img src="{{ asset('assets/diensten_background.webp') }}" alt="VoIP Hero" width="1920" height="1080" fetchpriority="high" decoding="async">
        <div class="overlay"></div>
        <div class="container hero-content">
            <h1 class="display-3 fw-bold animate-fade">
                VoIP, Telefonie & Telecom Diensten Voor Bedrijven
            </h1>
            <p class="lead animate-fade delay-1">
                Complete oplossingen voor hosted telefonie, SIP-trunks en PBX-systemen.
            </p>
            <div class="d-flex justify-content-center gap-3 animate-fade delay-2">
                <a href="{{ path('offerte') }}" class="btn btn-primary btn-lg btn-glow">Nieuwe klant?</a>
                <a href="{{ path('app_dienst_white_label') }}" class="btn btn-outline-light btn-lg btn-glow">Reseller worden?</a>
            </div>
        </div>
    </section>

    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="fw-bold text-center mb-5 animate-fade">Onze Telecom Diensten</h2>

            {% set diensten = [
                {'title':'Hosted Telefonie','desc':'Betrouwbare cloudtelefonie voor bedrijven.','route':'app_dienst_hosted_telefonie','img':'/assets/hosted-telefonie.webp'},
                {'title':'White-Label Telecom','desc':'Telecom aanbieden onder uw eigen merk.','route':'app_dienst_white_label','img':'/assets/white_label_telecom.webp'},
                {'title':'SIP Trunk','desc':'Stabiele SIP-trunks met hoge kwaliteit.','route':'app_dienst_sip_trunk','img':'/assets/sip_trunk.webp'},
                {'title':'Nummerportering','desc':'Uw nummers veilig en snel overgezet.','route':'app_dienst_nummerportering','img':'/assets/nummerportering.webp'},
                {'title':'PBX Systemen','desc':'Professionele telefooncentrales.','route':'app_dienst_pbx','img':'/assets/pbx_systemen.webp'},
                {'title':'Hosted PBX','desc':'Volledig cloudgebaseerde PBX.','route':'app_dienst_hosted_pbx','img':'/assets/hosted-pbx.webp'},
                {'title':'KPN Partner','desc':'Telecom via het betrouwbare KPN-netwerk.','route':'app_dienst_kpn','img':'/assets/kpn_business_partner.webp'},
                {'title':'Mobiele App','desc':'Telefonie beheren via één app.','route':'app_dienst_mobiele_app','img':'/assets/mobiel-app.webp'}
            ] %}

            <div class="row g-4">
                {% for dienst in diensten %}
                    <div class="col-lg-3 col-md-4 col-sm-6 animate-fade delay-{{ loop.index }}">
                        <div class="dienst-card h-100">
                            <a href="{{ path(dienst.route) }}" class="stretched-link"></a>
                            <div class="dienst-image" style="background-image:url('{{ dienst.img }}')">
                                <div class="image-overlay"></div>
                            </div>
                            <div class="dienst-body text-center">
                                <h3 class="h5 fw-bold mb-2">{{ dienst.title }}</h3>
                                <p class="text-muted mb-0">{{ dienst.desc }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <section class="py-5 text-center cta-section">
        <div class="container">
            <h2 class="fw-bold mb-3 text-white">
                Wilt u uw telecom naar een hoger niveau tillen?
            </h2>
            <p class="lead mb-4 text-white">
                Neem contact met ons op en ontdek hoe Easy Solutions uw bedrijf kan helpen.
            </p>
            <a href="{{ path('app_contact') }}" class="btn btn-cta btn-lg px-5 py-3 text-white">
                Contact opnemen
            </a>
        </div>
    </section>
{% endblock %}
