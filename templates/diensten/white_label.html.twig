    <!-- STYLES -->
    <style>
        /* HERO SECTION */
        .hero-section {
            height: 40vh;
            background: linear-gradient(135deg, #001f4d, #b30000);
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .hero-section .overlay {
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.35);
        }

        .hero-section h1 {
            font-size: clamp(2rem, 5vw, 4rem);
            font-weight: 900;
            letter-spacing: 1px;
            text-shadow: 2px 2px 10px rgba(0,0,0,0.5);
        }

        .hero-section p {
            font-size: 1.25rem;
            text-shadow: 1px 1px 8px rgba(0,0,0,0.4);
        }

        .description-text {
            max-width: 750px;
        }

        /* INFO CARDS */
        .info-card {
            border-radius: 12px;
            transition: transform 0.35s ease, box-shadow 0.35s ease, background 0.35s ease;
            padding: 1.5rem;
            background: #fff;
        }

        .info-card:hover {
            transform: translateY(-10px) scale(1.03);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            background: linear-gradient(135deg, #f9f9f9, #eaeaea);
        }

        .card-icon {
            font-size: 2rem;
            margin-bottom: 0.75rem;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, #001f4d, #b30000);
            color: #fff;
            transition: transform 0.3s ease, background 0.3s ease;
        }

        .info-card:hover .card-icon {
            transform: scale(1.2) rotate(5deg);
        }

        .card-title {
            font-weight: 600;
            color: #001f4d;
        }

        .card-text {
            color: #333;
            font-size: 0.95rem;
        }

        /* CTA BANNER */
        .cta-banner {
            background: linear-gradient(135deg, #001f4d, #b30000);
        }

        .btn-cta {
            background: #fff;
            color: #001f4d;
            font-weight: 700;
            border-radius: 50px;
            padding: 0.75rem 2.5rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .btn-cta:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 12px 25px rgba(0,0,0,0.25);
            background: #f8f8f8;
        }

        /* RESPONSIVE */
        @media (max-width: 768px) {
            .hero-section h1 {
                font-size: 2.5rem;
            }
            .hero-section p {
                font-size: 1.1rem;
            }
        }
    </style>

{% endblock %}
