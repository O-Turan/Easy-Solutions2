    <style>

        /* ================= HERO ================= */
        .hero-section{
            height: 60vh;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            overflow: hidden;
        }

        .hero-bg{
            position: absolute;
            inset: 0;
            background: url('{{ asset("assets/white-label-hero.webp") }}') center/cover no-repeat;
            background-size: cover;
            filter: brightness(0.6);
            transform: scale(1.1);
            z-index: 1;
            transition: transform 1.5s ease;
        }
        .hero-section:hover .hero-bg{
            transform: scale(1.15);
        }

        .hero-overlay{
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(0,31,77,0.7), rgba(179,0,0,0.6));
            z-index: 2;
        }

        .hero-content{
            position: relative;
            z-index: 3;
            max-width: 900px;
            padding: 0 1rem;
        }

        .scroll-down{
            display: inline-block;
            margin-top: 1rem;
            font-size: 2rem;
            animation: bounce 2s infinite;
            color: #fff;
        }

        @keyframes bounce{
            0%,20%,50%,80%,100%{transform:translateY(0);}
            40%{transform:translateY(-10px);}
            60%{transform:translateY(-5px);}
        }

        /* ================= CONTENT ================= */
        .description-text{
            max-width: 780px;
        }

        /* ================= FEATURE CARDS ================= */
        .feature-card{
            background: linear-gradient(145deg, #fff, #f5f5f5);
            border-radius: 20px;
            padding: 2rem 1.5rem;
            box-shadow: 0 10px 25px rgba(0,0,0,0.08);
            transition: transform .4s ease, box-shadow .4s ease, background .3s ease;
            position: relative;
            text-align: center;
        }

        .feature-card::before{
            content:'';
            position:absolute;
            left:0;
            top:0;
            width:6px;
            height:100%;
            background: linear-gradient(180deg,#001f4d,#b30000);
            border-radius:6px 0 0 6px;
        }

        .feature-card:hover{
            transform: translateY(-12px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.2);
            background: linear-gradient(145deg, #fff, #eaeaea);
        }

        .feature-icon{
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background: linear-gradient(135deg,#001f4d,#b30000);
            color:#fff;
            font-size:2rem;
            display:flex;
            align-items:center;
            justify-content:center;
            margin:0 auto 1rem auto;
            transition: transform .3s ease;
        }

        .feature-card:hover .feature-icon{
            transform: scale(1.3) rotate(10deg);
        }

        .feature-card h3{
            font-weight: 700;
            font-size: 1rem;
            margin-top: 0.75rem;
        }

        .feature-card p{
            font-weight: 400;
            font-size: 0.875rem;
            color: #333;
            line-height: 1.5;
        }

        /* ================= CTA ================= */
        .cta-section{
            background: linear-gradient(135deg,#001f4d,#b30000);
        }

        .btn-cta{
            background:#fff;
            color:#001f4d;
            font-weight:700;
            border-radius:50px;
            padding:.9rem 2.6rem;
            transition:all .3s ease;
        }

        .btn-cta:hover{
            transform: translateY(-3px) scale(1.05);
            box-shadow:0 15px 30px rgba(0,0,0,.25);
        }

        /* ================= ANIMATIONS ================= */
        @keyframes fadeUp{
            to{
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes heroZoom{
            from{ transform: scale(1); }
            to{ transform: scale(1.1); }
        }

        /* ================= RESPONSIVE ================= */
        @media (max-width:768px){
            .hero-section{
                height: 60vh;
            }
            .feature-card h3{
                font-size: 0.95rem;
            }
            .feature-card p{
                font-size: 0.825rem;
            }
        }

    </style>

    <script>
        document.addEventListener('scroll', function(){
            const scrolled = window.scrollY;
            const bg = document.querySelector('.hero-bg');
            if(bg) bg.style.transform = 'translateY(' + scrolled * 0.2 + 'px) scale(1.05)';
        });
    </script>

{% endblock %}