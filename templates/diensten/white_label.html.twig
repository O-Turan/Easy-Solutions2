    <!-- CTA SECTION -->
    <section class="cta-section py-5 text-center text-white">
        <div class="container">
            <h2 class="fw-bold mb-3">Wilt u White-Label diensten aanbieden?</h2>
            <p class="lead mb-4">
                Neem contact met ons op en ontdek hoe u professioneel telecomdiensten onder uw eigen merk kunt leveren.
            </p>
            <a href="{{ path('app_contact') }}" class="btn btn-cta btn-lg">
                Contact opnemen
            </a>
        </div>
