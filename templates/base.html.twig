<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Easy Solutions — Professionele VoIP & Telecom{% endblock %}</title>

    <!-- SEO -->
    <meta name="description" content="{% block meta_description %}Easy Solutions levert hoogwaardige VoIP-, telecom- en cloudtelefonie-oplossingen.{% endblock %}">
    <meta name="robots" content="index, follow">

    <!-- Open Graph -->
    <meta property="og:title" content="Easy Solutions — VoIP & Telecom">
    <meta property="og:description" content="Uw partner voor professionele VoIP-oplossingen">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ app.request.uri }}">
    <meta property="og:image" content="{{ asset('assets/LOGO.webp') }}">

    <!-- FAVICONS -->
    <link rel="icon" type="image/x-icon" href="{{ asset('assets/favicon/favicon.ico') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('assets/favicon/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('assets/favicon/favicon-16x16.png') }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('assets/favicon/apple-touch-icon.png') }}">
    <link rel="manifest" href="{{ asset('assets/favicon/site.webmanifest') }}">

    <!-- PRELOAD LOGO (LCP boost) -->
    <link rel="preload"
          as="image"
          href="{{ asset('assets/LOGO.webp') }}"
          fetchpriority="high">

    <!-- Bootstrap CSS (NON render-blocking) -->
    <link rel="preload"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
          as="style"
          onload="this.onload=null;this.rel='stylesheet'">

    <noscript>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    </noscript>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top shadow-sm">
    <div class="container">

        <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
            <img
                    src="{{ asset('assets/LOGO.webp') }}"
                    alt="Easy Solutions logo"
                    class="navbar-logo"
                    width="300"
                    height="67"
                    fetchpriority="high"
                    decoding="async">
        </a>

        <button class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navMenu"
                aria-label="Navigatiemenu openen">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navMenu">
            <ul class="navbar-nav ms-auto gap-3">

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}">Home</a>
                </li>

                <!-- DIENSTEN -->
                <li class="nav-item dropdown dropdown-hover">
                    <a class="nav-link dropdown-toggle"
                       href="#"
                       id="dienstenDropdown"
                       role="button"
                       data-bs-toggle="dropdown"
                       aria-expanded="false">
                        Diensten
                    </a>

                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('app_diensten') }}">Alle diensten</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="{{ path('app_dienst_white_label') }}">Partner</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_dienst_hosted_telefonie') }}">Hosted telefonie</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_dienst_hosted_pbx') }}">Hosted PBX</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_dienst_pbx') }}">PBX</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_dienst_sip_trunk') }}">SIP Trunk</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_dienst_kpn') }}">KPN Business Partner</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_dienst_nummerportering') }}">Nummerportering</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_dienst_mobiele_app') }}">Mobiele app</a></li>
                    </ul>
                </li>

                <li class="nav-item"><a class="nav-link" href="{{ path('app_over_ons') }}">Over ons</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_contact') }}">Contact</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('offerte') }}">Offerte</a></li>

            </ul>
        </div>
    </div>
</nav>

<!-- HOVER FIX (DESKTOP ONLY) -->
<style>
    @media (min-width: 992px) {
        .dropdown-hover:hover > .dropdown-menu {
            display: block;
            margin-top: 0;
        }
    }

    .navbar-logo {
        max-height: 60px;
        width: auto;
        height: auto;
    }

    .navbar-light .navbar-nav .nav-link {
        color: #001f4d;
        font-weight: 500;
        position: relative;
        transition: color 0.3s, transform 0.3s;
    }

    .navbar-light .navbar-nav .nav-link:not(.dropdown-toggle)::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: -5px;
        width: 0%;
        height: 2px;
        background: #b30000;
        border-radius: 2px;
        transition: width 0.3s ease;
    }

    .navbar-light .navbar-nav .nav-link:not(.dropdown-toggle):hover::after,
    .navbar-light .navbar-nav .nav-link:not(.dropdown-toggle).active::after {
        width: 100%;
    }

    .navbar-light .navbar-nav .nav-link:hover {
        color: #b30000;
        transform: translateY(-2px);
    }
</style>

<main>
    {% block body %}{% endblock %}
</main>

<!-- Bootstrap JS (deferred, geen render block) -->
<script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

<!-- FOOTER -->
<footer class="footer bg-gradient-dark text-white pt-5 pb-4">
    ...
</footer>

<style>
    .footer {
        background: linear-gradient(135deg, #001f4d, #0d0d0d);
    }
    .footer a.footer-link {
        color: #fff;
        text-decoration: none;
        transition: color 0.3s;
    }
    .footer a.footer-link:hover {
        color: #b30000;
    }
</style>

</body>
</html>
